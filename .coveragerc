# .coveragerc
# =============================================================================
# Coverage configuration for SWAPI Voting API
# -----------------------------------------------------------------------------
# Ensures that only real, testable application code is measured.
# Excludes auto-generated, config, and static-data-only modules.
# =============================================================================

[run]
branch = True
source = 
    src
omit =
    src/api/responses.py
    src/config/constants.py
    src/__init__.py
    src/__init__.py
    src/**/__init__.py

[report]
show_missing = True
skip_covered = True
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:

[html]
directory = coverage_html_report
